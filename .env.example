# iTaK Environment Variables
# Copy to .env and fill in your values

# === LLM API Keys ===
# At least one LLM provider is required
# Google Gemini (recommended for default config)
GEMINI_API_KEY=
GOOGLE_API_KEY=
# OpenAI
OPENAI_API_KEY=
# Anthropic Claude
ANTHROPIC_API_KEY=
# OpenRouter (multi-model gateway)
OPENROUTER_API_KEY=
# Groq (fast inference)
GROQ_API_KEY=

# === Platform Adapters ===
# Discord bot token (from Discord Developer Portal)
DISCORD_TOKEN=
# Telegram bot token (from @BotFather)
TELEGRAM_TOKEN=
# Slack tokens (from Slack App settings)
SLACK_TOKEN=
SLACK_APP_TOKEN=

# === Web Dashboard ===
# Password for WebUI authentication
WEBUI_PASSWORD=changeme

# Default launch args (used by container entrypoint)
# Examples: --webui, --webui-only, --adapter discord --webui
ITAK_ARGS=--webui

# Host ports (pick random 5-digit ports if desired)
# Set ITAK_RANDOM_PORTS=true to auto-generate on install.
ITAK_RANDOM_PORTS=true
WEBUI_PORT=48920
NEO4J_HTTP_PORT=47474
NEO4J_BOLT_PORT=47687
WEAVIATE_PORT=48080
SEARXNG_PORT=48888

# === Infrastructure Services ===
# Neo4j graph database (for knowledge graph - Tier 4 memory)
NEO4J_URI=bolt://localhost:7687
NEO4J_PASSWORD=
# Weaviate vector database (for semantic search)
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=
# SearXNG search engine (for web search tool)
SEARXNG_URL=http://localhost:8888

# === MemU (Optional - self-hosted by default) ===
# Only needed if using cloud mode. Self-hosted mode uses localhost:8080
MEMU_API_KEY=

# === Optional: Local Models ===
# Ollama local LLM server
OLLAMA_BASE_URL=http://localhost:11434
